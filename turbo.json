{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^typecheck"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "**/bin/**", "**/dist/**", "**/build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": true
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "typecheck": {
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["**/coverage/**"]
    },
    "migrate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
